  /// 异常信息
  exceptionInfo String?   @map("exception_info")
  /// 创建时间
  createTime    DateTime? @default(now()) @map("create_time") @db.Timestamp(6)

  @@index([createTime])
  @@index([jobName, jobGroup])
  @@index([status])
  @@map("sys_job_log")
}
